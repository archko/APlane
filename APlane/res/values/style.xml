    <style name="tags" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="verticalSpacing">2dp</item>
        <item name="horizontalSpacing">4dp</item>
        <item name="minRows">1</item>
    </style>

    <style name="emoji_tag_items">
        <!--<item name="android:textSize">14.0dp</item>-->
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@color/holo_blue_dark</item>
        <item name="android:textColor">@color/whiteSmoke</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

