<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchTabs" parent="Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/bottom_action_bar_height2</item>
        <!--<item name="android:background">@drawable/abs__tab_indicator_ab_holo</item>-->
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/peak_meter_padding_bottom</item>
        <!--<item name="android:paddingLeft">@dimen/tab_padding_left_right</item>
        <item name="android:paddingRight">@dimen/tab_padding_left_right</item>-->
        <item name="android:paddingTop">@dimen/peak_meter_padding_bottom</item>
        <item name="android:textColor">@color/search_tab_text_holo</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:selectAllOnFocus">false</item>
    </style>

    <style name="user_controller_btn_bg">
        <item name="android:background">@android:drawable/btn_default</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">0dip</item>
    </style>

    <style name="user_table_bg">
        <!--<item name="android:background">@drawable/abs__btn_cab_done_holo_dark</item>-->
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:minHeight">40dp</item>
    </style>

