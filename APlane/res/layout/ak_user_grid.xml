<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp" android:paddingTop="?android:attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The PullToRefreshGridView replaces a standard GridView widget. -->
    <com.handmark.pulltorefresh.library.PullToRefreshGridView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_grid"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:numColumns="@integer/gridview_columns"
        android:verticalSpacing="@dimen/grid_item_spacing"
        android:horizontalSpacing="@dimen/grid_item_spacing"
        android:cacheColorHint="@color/transparent"
        android:scrollbarStyle="outsideOverlay"
        ptr:ptrMode="both"
        ptr:ptrDrawable="@drawable/default_ptr_rotate"/>

    <TextView android:id="@+id/empty_txt"
        android:visibility="gone" android:text="@string/list_pre_empty_txt"
        android:gravity="center" android:textSize="20sp"
        android:layout_width="match_parent" android:layout_height="match_parent"/>

</FrameLayout>