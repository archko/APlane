<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:padding="8dp" android:orientation="vertical"
    android:scrollbars="none" android:background="@color/holo_light_bg_view">
    <TextView
        android:text="最多可以添加9张图片."
        android:textColor="@color/holo_light_item_name"
        android:minHeight="40dp" android:gravity="center"
        android:textSize="17sp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView
        android:text="目前未完成多图上传,所以只有第一张图片有效被返回."
        android:textColor="@color/red"
        android:minHeight="32dp" android:gravity="center"
        android:textSize="14sp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <GridView
        android:id="@+id/gridview"
        android:numColumns="@integer/gridview_columns"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:stretchMode="columnWidth"
        android:gravity="fill"
        android:cacheColorHint="@color/transparent"
        android:layout_width="match_parent" android:layout_height="match_parent">

    </GridView>

</LinearLayout>

