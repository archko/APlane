<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_height="fill_parent" android:layout_width="fill_parent"
    android:padding="8dp" android:orientation="vertical"
    android:scrollbars="none" style="?attr/bgView">
    <TextView
        android:text="最多可以添加9张图片."
        android:textColor="?attr/textColorItemName"
        android:minHeight="40dp" android:gravity="center"
        android:textSize="18sp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <GridView
        android:id="@+id/gridview"
        android:numColumns="@integer/gridview_columns"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:stretchMode="columnWidth"
        android:gravity="fill"
        android:cacheColorHint="@color/transparent"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    </GridView>

</LinearLayout>

