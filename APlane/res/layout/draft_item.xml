<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/image" android:contentDescription=""
        android:layout_alignParentLeft="true"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="6dp" android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp" android:layout_marginRight="6dp"
        android:layout_centerVertical="true"
        android:padding="4dip" android:src="@drawable/user_default_photo"/>

    <TextView android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dip"
        android:paddingLeft="4dip" android:layout_toRightOf="@id/image"
        android:text=""
        android:textColor="@color/holo_light_item_topbottom"
        android:textSize="14sp"/>

    <TextView android:id="@+id/title"
        android:layout_below="@id/msg" android:layout_toRightOf="@id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dip"
        android:text="title"
        android:textColor="@color/holo_light_item_topbottom"
        android:textSize="16sp"/>
</RelativeLayout>