<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent" android:layout_height="@dimen/bottom_action_bar_height">

    <ImageView android:id="@+id/btn_comment" android:src="@drawable/send_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" android:contentDescription="@string/opb_comment"
        android:paddingLeft="4dp" android:paddingRight="4dp"
        android:background="@drawable/holo_selector"/>

    <EditText
        android:id="@+id/et_quick_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/btn_comment"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:textColor="@color/holo_red_light"
        android:hint="@string/text_quick_comment_hint"
        android:textSize="@dimen/text_size_large"/>
</RelativeLayout>