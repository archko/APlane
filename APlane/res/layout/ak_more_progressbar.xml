<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView android:id="@+id/more_txt"
        android:layout_height="55dip" android:layout_width="wrap_content"
        android:text="@string/more" android:textSize="16sp"
        android:textColor="@color/red" android:layout_marginLeft="10dip"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="30dip" android:layout_height="30dip"
        android:layout_centerVertical="true" android:indeterminateOnly="true"
        android:indeterminateBehavior="repeat"
        android:layout_centerHorizontal="true"
        android:indeterminateDrawable="@drawable/progressbar"
        style="?android:attr/progressBarStyleSmall" android:visibility="visible"
        android:layout_toRightOf="@id/more_txt"/>

</RelativeLayout>