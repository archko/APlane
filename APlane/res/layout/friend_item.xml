<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:id="@+id/content_rl"
    android:layout_width="fill_parent" android:layout_height="wrap_content">

    <ImageView android:id="@+id/iv_portrait" android:layout_alignParentLeft="true"
        android:layout_width="32dip" android:layout_height="32dip"
        android:layout_marginTop="2dip" android:layout_marginBottom="2dip"
        android:layout_marginRight="4dip" android:src="@drawable/user_default_photo"
        android:layout_marginLeft="2dip" android:scaleType="fitXY"
        android:focusable="false"/>

    <Button android:id="@+id/follow_btn" android:layout_centerVertical="true"
        android:layout_width="wrap_content" android:layout_height="32dip"
        android:text="@string/friend_item_btn" android:textSize="14sp"
        style="@style/RedButton" android:layout_marginRight="6dp"
        android:paddingLeft="8dp" android:paddingRight="8dp"
        android:layout_alignParentRight="true" android:focusable="false"/>

    <LinearLayout android:id="@+id/right"
        android:layout_toRightOf="@id/iv_portrait"
        android:orientation="vertical" android:layout_toLeftOf="@id/follow_btn"
        android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_name"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/friend_item_name" android:textSize="16sp"
            android:paddingLeft="4dip"
            android:paddingTop="2dp" android:paddingBottom="2dp"
            android:textColor="?attr/textColorItemName"/>

        <TextView android:id="@+id/status_content"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/friend_item_content"
            android:textSize="16sp" android:maxLines="3" android:paddingRight="4dip"
            android:paddingTop="2dp" android:paddingBottom="2dp"
            android:paddingLeft="4dip" android:textColor="?attr/textColorItemStatus"/>
    </LinearLayout>

    <LinearLayout android:layout_marginTop="4dp"
        android:layout_below="@id/right" android:layout_toRightOf="@id/iv_portrait"
        android:layout_height="wrap_content" android:layout_width="fill_parent">

        <TextView android:id="@+id/source_from"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/item_from"
            android:textSize="12sp" android:paddingBottom="4dp"
            android:singleLine="true" android:textColor="?attr/textColorItemTopBottom"/>

        <TextView android:id="@+id/send_time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/item_time"
            android:textSize="12sp" android:paddingBottom="4dp"
            android:layout_marginLeft="6dp"
            android:singleLine="true" android:textColor="?attr/textColorItemTopBottom"/>
    </LinearLayout>
</RelativeLayout>
