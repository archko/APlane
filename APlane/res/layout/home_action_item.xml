<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true" android:background="@drawable/holo_selector"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/image" android:contentDescription=""
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <TextView android:id="@+id/title" android:text=""
        android:textColor="?attr/textColorItemSidebar"
        style="@style/TopActionBarItem.Home"/>

    <TextView android:id="@+id/msg" android:text=""
        android:paddingLeft="4dp" android:paddingRight="6dp"
        style="@style/TopActionBarMsgItem" android:background="@drawable/shape_msg_bg"/>
</RelativeLayout>